<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/JSP/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean class = "org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <bean class="com.example.hw4part4.controller.MoviesController"></bean>
    <bean class="com.example.hw4part4.controller.AddMovieController"></bean>
    <bean class="com.example.hw4part4.controller.AddMultipleMoviesController"></bean>
    <bean class="com.example.hw4part4.controller.SearchMovieController"></bean>
</beans>